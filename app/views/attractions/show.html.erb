<h2><%= @attraction.name %></h2>

Tickets: <%= @attraction.tickets %><br>
Min Height: <%= @attraction.min_height %><br>
Happiness Rating: <%= @attraction.happiness_rating %><br>
Nausea Rating: <%= @attraction.nausea_rating %><br><br>

<% if @user.admin == true %>
  <%= link_to "Edit Attraction", edit_attraction_path %>
<% else %>
  <%= form_for(@ride) do |f| %>
      <%= f.hidden_field :attraction_id, :value => @attraction.id %>
      <%= f.hidden_field :user_id, :value => @user.id%>
      <%= f.submit "Go on this ride" %>
  <% end %>
<% end %>
